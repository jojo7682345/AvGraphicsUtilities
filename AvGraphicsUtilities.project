AvGraphicsUtilities {
	type: DLL
	export: $(OUTPUT)
	flags: -std=c11 -ggdb -fPIC
	source: [
		src
	]
	include: [
		include
		#$(VULKAN_SDK)\Include
		#$(GLFW_SDK)\include
	]
	libdir: [
		#$(GLFW_SDK)\lib-mingw-w64
	]
	lib: [
		glfw
		vulkan
		#user32
		#gdi32
	]
}
AvGraphicsUtilitiesTest {
	type: EXE 
	export: [
		test/assets
		$(OUTPUT)
	]
	flags: -Wall -ggdb
	source: [
		test/src
	]
	include: [
		include
	]
	libdir: [
		lib
	]
	lib: [
		AvGraphicsUtilities
	]
}
