AvGraphicsUtilities {
	type: DLL
	export: $(OUTPUT)
	flags: -Wall -g
	source: [
		src
	]
	include: [
		include
		$(CCR_SDK)\include
		$(VULKAN_SDK)\Include
		$(GLFW_SDK)\include
	]
	libdir: [
		lib
		$(GLFW_SDK)\lib-mingw-w64
		$(VULKAN_SDK)\Lib
	]
	lib: [
		glfw3
		vulkan-1
		user32
		gdi32
	]
}
AvGraphicsUtilitiesTest {
	type: EXE 
	export: [
		test\assets
		$(OUTPUT)
	]
	flags: -Wall -g
	source: [
		test\src
	]
	include: [
		include
		$(CCR_SDK)\include
	]
	libdir: [
		lib
	]
	lib: [
		AvGraphicsUtilities
	]
}
